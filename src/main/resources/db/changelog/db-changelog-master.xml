<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="roles" author="bahaslouski">
        <createTable tableName="roles">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="role_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <insert tableName="roles">
            <column name="role_name" value="ADMIN"/>
        </insert>
        <insert tableName="roles">
            <column name="role_name" value="USER"/>
        </insert>
    </changeSet>

    <changeSet id="achievements" author="bahaslouski">
        <createTable tableName="achievements">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="achievement_name" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
            <column name="image_src" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <insert tableName="achievements">
            <column name="achievement_name" value="Good"/>
            <column name="description" value="Very good"/>
            <column name="image_src" value="image good"/>
        </insert>
        <insert tableName="achievements">
            <column name="achievement_name" value="Well"/>
            <column name="description" value="Very well"/>
            <column name="image_src" value="image well"/>
        </insert>
    </changeSet>

    <changeSet id="users" author="bahaslouski">
        <createTable tableName="users">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="last_name" type="VARCHAR(255)"/>
            <column name="birth_date" type="DATE"/>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="gender" type="VARCHAR(255)"/>
            <column name="weight" type="INT"/>
            <column name="height" type="INT"/>
